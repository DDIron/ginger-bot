const { SlashCommandBuilder } = require("discord.js");
const print_display = require("../loose_functions/print_display.js");

module.exports = {
	data: new SlashCommandBuilder()
		.setName("help")
		.setDescription("Retrieve a list of available commands."),
	async execute(interaction) {
        // if queue exists, pass args into print_display
        let guildQueue = interaction.client.player.getQueue(interaction.guildId);
		if (!guildQueue) {
			print_display.execute(null, null)
		} else {
            let song = guildQueue[0]
		    print_display.execute(null, song, interaction)
        }
	}
};